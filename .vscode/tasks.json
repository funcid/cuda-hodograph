{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "cppbuild",
            "label": "CUDA Build",
            "command": "nvcc",
            "args": [
                "-g",
                "-std=c++17",
                "-I${workspaceFolder}\\include",
                "-L${workspaceFolder}\\lib",
                "${workspaceFolder}\\src\\main.cu",
                "-lglfw3dll",
                "-lglew32",
                "-lopengl32",
                "-o",
                "${workspaceFolder}\\main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
